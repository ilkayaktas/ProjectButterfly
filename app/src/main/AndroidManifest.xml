<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ilkayaktas.projectname">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
            android:name=".App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity
                android:name=".views.activities.splash.SplashScreenActivity"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Design.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".views.activities.home.MainActivity"
                  android:screenOrientation="portrait"
                  android:parentActivityName=".views.activities.home.MainActivity"> <!-- notofication support for Android 4.1 and later -->
            <!-- notofication support for Android 4.0.3 and lower.-->
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".views.activities.home.MainActivity"/>
        </activity>

        <receiver android:name=".controller.services.broadcastreceivers.BootCompletedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <service
                android:name=".controller.services.MobssPeriodicNotificationService"
                android:enabled="true"
                android:exported="false"/>

    </application>

</manifest>